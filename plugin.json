{
  "id": "nodebb-plugin-pipe-spoiler",
  "name": "NodeBB Pipe Spoiler",
  "description": "Spoiler plugin using pipe syntax (||text||). Ability to control visibility of content in posts with double pipe notation.",
  "url": "https://github.com/AMAARETS/nodebb-plugin-pipe-spoiler",
  "library": "./plugin/index.js",
  "hooks": [
    {
      "hook": "filter:composer.help",
      "method": "hooks.filters.composerHelp"
    },
    {
      "hook": "filter:composer.formatting",
      "method": "hooks.filters.composerFormatting"
    },
    {
      "hook": "filter:parse.post",
      "method": "hooks.filters.parsePost",
      "priority": 7
    },
    {
      "hook": "static:app.load",
      "method": "hooks.statics.appLoad"
    }
  ],
  "less": [
    "style/forum.less"
  ],
  "scripts": [
    "public/js/spoiler.js",
    "public/js/composer.js"
  ],
  "staticDirs": {}
}